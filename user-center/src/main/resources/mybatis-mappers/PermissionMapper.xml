<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wbd.user.center.dao.SysPermissionDao">
	<select id="count" resultType="int">
		select count(1) from sys_permission r
		<include refid="where"></include>
	</select>

	<sql id="where">
		<where>
			<if test="name!=null and name!=''">
				<bind name="_name" value="'%' + name +'%'" />
				and r.name like #{_name}
			</if>
			<if test="permission!=null and permission!=''">
				<bind name="_permission" value="'%' + permission +'%'" />
				and r.permission like #{_permission}
			</if>
		</where>
	</sql>

	<select id="findData" resultType="AppUser">
		select * from sys_permission r
		<include refid="where" />
		order by t.id desc
		limit #{start},#{length}
	</select>
</mapper>